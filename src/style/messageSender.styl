.messageSender
  display: flex
  margin-top: 30px!important
  flex-direction: column
  background-color: white 
  border-radius: 15px
  box-shadow: 0px 5px 7px -7px rgba(0, 0, 0, 0.75)
  width: 100%
  // this will style the entire top div
  .messageSender__top
    display: flex
    border-bottom: 1px solid #eff2f5
    padding: 15px
    form
      flex: 1
      display: flex
      // this will style the input
      input
        outline-width: 0
        border: none 
        padding: 5px 20px
        margin: 0 10px!important
        border-radius: 999px
        background-color: #eff2f5
      button 
        display: none 
    .messageSender__input
      flex: 1
  .messageSender__bottom
    display: flex
    justify-content: space-evenly
    .messageSender__option
      padding: 20px
      display: flex
      align-items: center
      color: grey 
      margin: 5px!important
      h3
        font-size: medium
        margin-left: 10px!important
        cursor pointer
      &:hover
        background-color: #eff2f5
        border-radius: 20px
