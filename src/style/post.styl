.post
  width: 100%
  margin-top: 15px!important
  border-radius: 15px
  background-color: white 
  box-shadow: 0px 5px 7px -7px rgba(0, 0, 0, 0.75)
  box-shadow x y blur spread color
  .post__top
    display: flex
    position relative
    align-items: center
    padding 15px 
    .post__avatar
      margin-right: 10px!important
    .post__topInfo
      h3
        font-size: medium
      p 
        font-size: small
        color: gray
  .post__bottom
    margin-top: 10px!important
    margin-bottom: 10px!important
    padding 15px 25px
  .post__image
    img 
      width: 100%
  .post__options
    padding-top: 10px
    border-top: 1px solid lightgrey 
    display: flex
    justify-content: space-evenly
    font-size: medium
    color: grey 
    cursor pointer
    padding 15px
    .post__option
      display: flex
      align-items: center
      justify-content: center
      padding 5px
      flex: 1
      p 
        margin-left: 10px!important
      &:hover
        background-color: #eff2f5
        border-radius: 10px